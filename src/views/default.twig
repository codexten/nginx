{# @var foo \hidev\nginx\components\Nginx #}

{% if this.ssl %}

server {
{% for ip in this.ips %}
    listen          {{ ip }};
{% endfor %}
    server_name     {{ this.serverName }};
    root            {{ this.webDir }};
    error_log       {{ this.logDir }}/{{ this.domain }}-error.log info;
    access_log      off;

    location ~ /.well-known {
        allow all;
    }
    location / {
        rewrite (.*) https://{{ this.domain }}$1;
    }
}


server {
{% for ip in this.ips %}
    listen          {{ ip }}:443;
{% endfor %}
    server_name     {{ this.serverName }};

    ssl                       on;
    ssl_session_cache         shared:SSL:10m;
    ssl_session_timeout       10m;
    ssl_certificate           {{ this.sslDir }}/fullchain.pem;
    ssl_certificate_key       {{ this.sslDir }}/privkey.pem;
    ssl_protocols             SSLv3 TLSv1 TLSv1.1 TLSv1.2;
    ssl_ciphers               "HIGH:!aNULL:!MD5 or HIGH:!aNULL:!MD5:!3DES";
    ssl_prefer_server_ciphers on;

    client_max_body_size 128M;

    location / {
        proxy_pass http://{{ this.localIps | first }}:80;
{% if this.timeout %}
        proxy_read_timeout {{ this.timeout }};
{% endif %}
        proxy_redirect off;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto https;
    }
}
{% endif %}

server {
{% for ip in this.localIps %}
    listen          {{ ip }};
{% endfor %}
    server_name     {{ this.serverName }};
    root            {{ this.webDir }};

    charset utf-8;
    client_max_body_size 128M;

    server_tokens   off;

    error_log       {{ this.logDir }}/{{ this.domain }}-error.log info;
    access_log      {{ this.logDir }}/{{ this.domain }}-access.log combined;

    fastcgi_index   index.php;

    location / {
        # Redirect everything that isn't a real file to index.php
        try_files $uri /index.php$is_args$args;
    }

    location ~ \.php$ {
        include          fastcgi_params;
        fastcgi_pass     {{ this.fpmSocket }};
{% if this.timeout %}
        fastcgi_read_timeout {{ this.timeout }};
{% endif %}
        fastcgi_param    SCRIPT_FILENAME $document_root/$fastcgi_script_name;
{% if this.ssl %}
        set $my_real_ip $remote_addr;
        if ($http_x_real_ip) {
            set $my_real_ip $http_x_real_ip;
        }
        fastcgi_param    REMOTE_ADDR $my_real_ip;
{% endif %}
        fastcgi_param    HTTP_REFERER $http_referer;
        fastcgi_param    PHP_VALUE "
            error_log = {{ this.phpLogDir }}/{{ this.domain }}-php.log
            error_reporting = E_ALL & ~E_NOTICE & ~E_STRICT
        ";
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        try_files $uri =404;
    }

    location ~ /\.(ht|svn|git) {
        deny all;
    }

    location @not_found {
        internal;
        return 404;
    }
}

{{ this.additionalConfig }}